algoritmo Area_perimetro_circunferencia
	definir n1, n2, n3, n4 como numerico
	//Declarar variable donde se guardará la opción del menú elegida
	definir opc, a, b como caracter
	//Mostrar el menú por pantalla 
	escribir "Menú"
	escribir "----"
	escribir "(1)Area "
	escribir "(2)perímetro "
	escribir "Elige una opción (1 - 2)......"
	leer opc
	//Instrucciones a realizar segun la opcion elegida
	segun opc Hacer
		'1':
			Escribir "Area"
			Escribir "escribe el radio de la circunferencia"
			leer n1
			n2=3.14159265359*n1^2
			Escribir "el area de la circunferencia es:", n2
			Escribir "gracias"
		'2':
			Escribir "Perimetro"
			Escribir "escribe el radio de la circunferencia"
			leer n3
			n4=2*3.13159265359*n3
			Escribir "el perimetro de la circunferencia es:", n4
			Escribir "gracias"
	FinSegun
finalgoritmo
